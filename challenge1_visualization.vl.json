{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/colmr/vis_class/master/London2012Vega.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.Weight > 0"
    },
    {
      "filter": "datum.Height > 0"
    }
  ],
  "mark": "circle",
  "encoding": {
    "y": {
      "field": "Height",
      "type": "quantitative",
      "scale": {
        "zero": false
      }
    },
    "x": {
      "field": "Weight",
      "type": "quantitative",
      "scale": {
        "zero": false
      }
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "scale": {
        "domain": [
          "F",
          "M"
        ]
      }
    },
    "tooltip": {
      "field": "Name",
      "type": "nominal"
    }
  },
  "title": {
    "text": "Olympic Athletes- Weight vs Height",
    "anchor": "middle",
    "fontSize": 24
  },
  "width": 400,
  "height": 250,
  "config": {
    "legend": {
      "orient": "bottom-right"
    },
    "axis": {
      "titleFontSize": 14,
      "titlePadding": 5,
      "labelPadding": 5
    }
  }
}